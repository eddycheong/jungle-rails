<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if session[:user_id] %>
      <div class="row">
        <div id="review-form" class="col-sm-12">
          <%= form_for [@product, @review] do |form| %>
            <div class="form-group">
              <%= form.label :rating %>
              <%= form.select(:rating, (1..5), {}, {class: 'form-control'}) %>
            </div>
          
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, rows: 5, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.submit class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-12">
        <h3>Reviews</h3>
      </div>
    </div>

    <% @product.reviews.reverse.each do |review| %>
      <div class="row review">
        <div class="rating">
          <%= render 'rating', rating: review.rating %>
        </div>
        <div>
          <p><%= "By: #{review.user.first_name} #{review.user.last_name}" %></p>
          <p><%= review.description %></p>
        </div> 
        <% if review.user.id == session[:user_id]%>
          <div>
            <%= button_to 'Delete Review', [@product, review], method: :delete, class: 'btn btn-danger'  %>
          </div>
        <% end %>
      </div>
    <% end %>

  </article>
</section>
